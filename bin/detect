#!/usr/bin/env bash

# This pack is valid for apps with yarn.lock in root directory

BUILD_DIR="$1"

if [ ! -f "${BUILD_DIR}/yarn.lock" ]; then
  echo "No yarn.lock found in root directory"
  exit 1
fi

if [ ! -f "${BUILD_DIR}/.yarnrc.yml" ]; then
  echo "No .yarnrc.yml found in root directory"
  exit 1
fi

if [ ! -d "${BUILD_DIR}/.yarn" ]; then
  echo "No .yarn folder found in root directory"
  exit 1
fi

echo "Yarn"
exit 0
